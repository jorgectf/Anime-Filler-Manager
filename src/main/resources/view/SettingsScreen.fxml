<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="445.0" prefWidth="588.0" styleClass="Panes" stylesheets="@application.css" type="Pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>

      <Label layoutX="136.0" layoutY="59.0" text="*Sort MyList and ToWatch in name order or insertion order?" textAlignment="CENTER" textFill="WHITE" />
      <HBox alignment="CENTER" layoutX="209.0" layoutY="76.0" prefHeight="36.0" prefWidth="171.0" spacing="30.0">
         <children>
            <Label contentDisplay="RIGHT" text="Insertion" textFill="WHITE">
               <graphic>
                  <CheckBox fx:id="insertionCheckBox" contentDisplay="TOP" mnemonicParsing="false" onAction="#insertion" textFill="WHITE" />
               </graphic>
            </Label>
            <CheckBox fx:id="nameCheckBox" mnemonicParsing="false" onAction="#name" prefHeight="17.0" prefWidth="62.0" text="Name" textFill="WHITE" />
         </children>
      </HBox>

      <GridPane layoutX="114.0" layoutY="142.0" prefHeight="61.0" prefWidth="328.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="252.0" minWidth="10.0" prefWidth="252.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="94.4000244140625" minWidth="0.0" prefWidth="0.0" />
        </columnConstraints>

        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

         <children>
            <Label contentDisplay="RIGHT" text="*Show facts?" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <CheckBox fx:id="factsCheckBox" mnemonicParsing="false" onAction="#showFacts" textFill="WHITE" GridPane.columnIndex="1" />
            <Label contentDisplay="RIGHT" text="Play sound upon search completion?" textFill="WHITE" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <CheckBox fx:id="soundCheckBox" mnemonicParsing="false" onAction="#playSound" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </CheckBox>
         </children>

      </GridPane>
      <Label contentDisplay="RIGHT" layoutX="230.0" layoutY="223.0" text="Always on top" textFill="WHITE">
         <graphic>
            <CheckBox fx:id="alwaysOnTopBox" mnemonicParsing="false" onAction="#alwaysOnTop" />
         </graphic>
      </Label>
      <Label contentDisplay="RIGHT" layoutX="203.0" layoutY="257.0" text="*Automate loading screen" textFill="WHITE">
         <graphic>
            <CheckBox fx:id="skipLoadingBox" mnemonicParsing="false" onAction="#skipLoading" />
         </graphic>
      </Label>

      <Label layoutX="97.0" layoutY="325.0" prefHeight="63.0" prefWidth="181.0" text="*Changes will only take place upon restart" textAlignment="CENTER" textFill="#fff82c" wrapText="true">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Label>
      <Button layoutX="332.0" layoutY="332.0" mnemonicParsing="false" onAction="#resetToDefault" prefHeight="48.0" prefWidth="96.0" text="Reset" textFill="RED">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>

   </children>
</fx:root>
